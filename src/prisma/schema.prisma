generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
}

enum StaffType {
  DOCTOR
  CONSULTANT
  SUPPORT_AGENT
}

model Staff {
  id            String        @id @default(cuid())
  name          String
  type          StaffType
  dailyCapacity Int
  onLeave       Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  appointments  Appointment[]
}

model Service {
  id                String        @id @default(cuid())
  name              String
  duration          Int // duration in minutes
  requiredStaffType StaffType
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  appointments      Appointment[]
}

model Customer {
  id           String        @id @default(cuid())
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  appointments Appointment[]
}

enum AppointmentStatus {
  QUEUED
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
}

model Appointment {
  id String @id @default(cuid())

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  staff   Staff?  @relation(fields: [staffId], references: [id])
  staffId String?

  startTime       DateTime
  endTime         DateTime?
  status          AppointmentStatus
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  appointmentLogs AppointmentLog[]
}

enum ActionType {
  QUEUED
  SCHEDULED
  UPDATED
  CANCELED
  COMPLETED
  RESCHEDULED
}

model AppointmentLog {
  id String @id @default(cuid())

  appointmentId String
  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  createdById String
  customerId  String
  serviceId   String
  staffId     String?
  startTime   DateTime
  endTime     DateTime?
  status      AppointmentStatus
  
  action      ActionType
  timestamp DateTime @default(now())
}
